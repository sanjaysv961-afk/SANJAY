import javafx.application.Application;
import javafx.geometry.*;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.layout.*;
import javafx.scene.paint.Color;
import javafx.scene.text.Font;
import javafx.stage.Stage;

public class MovieTicketBooking extends Application {

    private static final int ROWS = 5;
    private static final int COLS = 8;
    private static final int TICKET_PRICE = 150;

    private int totalPrice = 0;
    private Label priceLabel;

    @Override
    public void start(Stage stage) {
        stage.setTitle("ðŸŽ¬ Movie Ticket Booking System");

        GridPane grid = new GridPane();
        grid.setHgap(10);
        grid.setVgap(10);
        grid.setPadding(new Insets(20));
        grid.setAlignment(Pos.CENTER);

        priceLabel = new Label("Total Price: â‚¹0");
        priceLabel.setFont(new Font("Arial", 18));
        priceLabel.setTextFill(Color.BLUE);

        // Create seat buttons
        for (int row = 0; row < ROWS; row++) {
            for (int col = 0; col < COLS; col++) {
                Button seat = new Button("Seat " + (row + 1) + (char) ('A' + col));
                seat.setPrefSize(80, 40);
                seat.setStyle("-fx-background-color: lightgreen; -fx-font-weight: bold;");

                seat.setOnAction(e -> {
                    if (seat.getStyle().contains("lightgreen")) {
                        seat.setStyle("-fx-background-color: tomato; -fx-font-weight: bold;");
                        totalPrice += TICKET_PRICE;
                    } else {
                        seat.setStyle("-fx-background-color: lightgreen; -fx-font-weight: bold;");
                        totalPrice -= TICKET_PRICE;
                    }
                    priceLabel.setText("Total Price: â‚¹" + totalPrice);
                });

                grid.add(seat, col, row);
            }
        }

        VBox layout = new VBox(20, grid, priceLabel);
        layout.setAlignment(Pos.CENTER);
        layout.setPadding(new Insets(20));

        Scene scene = new Scene(layout, 700, 450);
        stage.setScene(scene);
        stage.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}